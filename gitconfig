[alias]
  n = "!n() { \
    local last_branch; \
    last_branch=$(git symbolic-ref --short HEAD); \
    git checkout master; \
    git fetch; \
    git rebase; \
    git checkout ${last_branch}; \
    git rebase master; \
  }; n" 
  
  a = "add"
  c = "commit"
  cl = "clone"
  co = "checkout"
  com = "checkout master"
  d = "diff"
  f = "fetch"
  l = "log"
  m = "merge"
  p = "push"
  pu = "pull --rebase"
  r = "rebase"
  s = "status"
  st = "stash"
  t = "tag"
