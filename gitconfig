[alias]
  mm = "!mm() { \
    set +x; \
    local main_branch; \
    main_branch=$(git symbolic-ref --short refs/remotes/origin/HEAD); \
    git merge --ff ${main_branch}; \
    set -x; \
  }; mm"

  n = "!n() { \
    set +x; \
    local last_branch; \
    last_branch=$(git symbolic-ref --short HEAD); \
    local main_branch; \
    main_branch=$(git symbolic-ref --short refs/remotes/origin/HEAD); \
    git checkout master || git checkout main; \
    git fetch; \
    git rebase; \
    git checkout ${last_branch}; \
    git rebase master || git rebase main; \
    set -x; \
  }; n"

  a = "add"
  c = "commit"
  cl = "clone"
  cp = "cherry-pick"
  co = "checkout"
  com = "checkout master"
  d = "diff"
  f = "fetch"
  i = "update-index --skip-worktree"
  ix = "update-index --no-skip-worktree"
  l = "log"
  m = "merge"
  p = "push"
  pu = "pull --rebase"
  r = "rebase"
  s = "status"
  st = "stash"
  t = "tag"
[pull]
